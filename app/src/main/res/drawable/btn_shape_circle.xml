<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
<item android:state_checked="false">
    <shape android:shape="rectangle">
        <corners
            android:bottomLeftRadius="@dimen/checkboxRadius"
            android:bottomRightRadius="@dimen/checkboxRadius"
            android:topLeftRadius="@dimen/checkboxRadius"
            android:topRightRadius="@dimen/checkboxRadius" />
        <gradient
            android:type="radial"
            android:gradientRadius="300"
            android:startColor="@color/white"
            android:endColor="@color/white">
        </gradient>
    </shape>
</item>
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <stroke
                android:width="@dimen/btnShapeCircleStroke"
                android:color="@color/rick_and_morty"/>
            <corners
                android:bottomLeftRadius="@dimen/checkboxRadius"
                android:bottomRightRadius="@dimen/checkboxRadius"
                android:topLeftRadius="@dimen/checkboxRadius"
                android:topRightRadius="@dimen/checkboxRadius" />
            <gradient
                android:type="radial"
                android:gradientRadius="300"
                android:startColor="@color/rick_and_morty_green"
                android:endColor="@color/rick_and_morty_green">
            </gradient>
        </shape>
    </item>
</selector>